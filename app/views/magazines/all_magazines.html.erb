<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1 col-sm-8 col-sm-offset-2">    
        <div class="table-responsive">
          <% if notice %>
            <p id="notice" class="alert alert-success"><%= notice %></p>
          <% end %>

          <h1>Listing Magazines</h1>
          <div>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Description</th>
                  <th>User</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @magazines.each do |magazine| %>
                  <tr>
                    <td><%= magazine.title %></td>
                    <td><%= magazine.description %></td>
                    <td><%= magazine.user.full_name.present? ? magazine.user.full_name : magazine.user.email %></td>
                    <td><%= link_to 'Show', magazine %>
                    
                  </tr>
                <% end %>
              </tbody>
            </table>
            <br>

            <%= link_to 'New Magazine', new_magazine_path, class: "btn btn-red" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>