<div class="wrapper">
 	<div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1 col-sm-8 col-sm-offset-2">    
				<div class="table-responsive">
					<p id="notice"><%= notice %></p>

					<h1>Magazines</h1>
					<div>
					<table class="table table-striped">
					  <thead>
					    <tr>
					      <th>Title</th>
					      <th>Description</th>
					      <th>Author</th>
					      <th colspan="3"></th>
					    </tr>
					  </thead>

					  <tbody>
					  	<%if @magazines.size > 0 %>
						    <% @magazines.each do |magazine| %>
						      <tr>
						        <td style="width:20%"><%= magazine.title %></td>
						        <td style="width:50%;word-break:break-word;"><%= magazine.description %></td>
						        <td style="width:30%"><%= magazine.user.full_name.present? ? magazine.user.full_name : magazine.user.email %></td>
						        <td><%= link_to 'Show', magazine %>
						      </tr>
						     <% end %>
					    <% else %>
					    	<tr>
					    		<td colspan="3">No Magazine available.</td>
					    	</tr>
					    <% end %>
					  </tbody>
					</table>
					<br>

          <%= link_to 'New Magazine', new_magazine_path, class: "btn btn-red" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>